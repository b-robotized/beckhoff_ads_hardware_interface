<launch>
    <arg name="mock_hardware" default="true" />
    <arg name="mock_sensor_commands" default="false"/>

    <let name="robot_description_content" value="$(command '$(find-exec xacro) $(find-pkg-share beckhoff_bringup)/urdf/beckhoff_bot.urdf.xacro mock_hardware:=$(var mock_hardware) mock_sensor_commands:=$(var mock_sensor_commands)')"/>

    <!--robot_state_pub_node-->
    <node pkg="robot_state_publisher" exec="robot_state_publisher" output="both">
        <param name="robot_description" value="$(var robot_description_content)"/>
    </node>

    <!--control_node-->
    <node pkg="controller_manager" exec="ros2_control_node" output="both">
        <param name="robot_description" value="$(var robot_description_content)" />
        <param from="$(find-pkg-share beckhoff_bringup)/config/beckhoff_bot_controllers.yaml"/>
    </node>

</launch>

